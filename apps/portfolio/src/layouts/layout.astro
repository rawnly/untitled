---
import '../global.css'
import Navbar from '../components/navbar.astro'

interface Props {
	title: string;
	description?: string;
}

const { title, description } = Astro.props
---
<html lang="en" class='dark'>
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="https://github.com/rawnly.png?size=16" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<meta name="description" content={description} />
		<title>{title}</title>

		<script async src="https://cdn.seline.com/seline.js" data-token="6e68d909b5657d2"></script>
	</head>
	<body class='text-neutral-12 p-8 bg-neutral-1'>
		<div class="max-w-3xl py-12 mx-auto">
			<Navbar />
		</div>
		<main class="max-w-xl sm:py-24 mx-auto">
		  <slot />
		</main>
		<div class='sm:fixed max-sm:mt-12 max-sm:justify-center px-4 py-6 backdrop-blur w-full bottom-0 left-5 text-neutral-11 flex gap-2 items-center justify-start'>
			<div class='relative size-2'>
				<div class='w-full z-50 absolute inset-0 rounded-full bg-green-10' />
				<div class='w-full absolute inset-0 rounded-full bg-green-6 animate-ping' />
			</div>
			<span>Currently in Milan, Italy</span>
		</div>
	</body>
</html>
